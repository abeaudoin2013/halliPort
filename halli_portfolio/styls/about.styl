@import 'var.styl'
@import 'mixins.styl'

.about-main-container
  height 100%
  .hero
    width 100%
    height 60%
    background rgba(0, 0, 0, .15)
    .hero-text
      margin 0
      padding 55px
      font-size 5em
      text-align center
      text-transform uppercase
    .hero-text-desk
      display block
  .about-container
    width 90%
    margin 25px auto 0 auto
    font-size 16px
    color #000
    .hero-text-mob
      display none
    .gold
      color $gold
      cursor pointer
      a
        color $gold
        text-decoration none
      a:hover
        color $gold
        text-decoration none
      a:focus
        color $gold
        text-decoration none
@media screen and (max-width 750px)
  .about-main-container
    .hero
      height 400px
      .hero-text-desk
        display none
    .about-container
      margin 0 auto
      padding 25px
      width 100%
      background-color #000
      color #fff
      .hero-text-mob
        display block
        margin 0 0 15px 0
        font-size 3em
        text-align center
        text-transform uppercase