@import 'var.styl'
@import 'mixins.styl'

.hero
  width 100%
  height 60%
  background rgba(0, 0, 0, .15)
  .hero-text
    margin 0
    padding 55px
    font-size 5em
    text-align center
    text-transform uppercase
.about-container
  width 90%
  margin 25px auto 0 auto
  font-size 16px
  color #000
  .gold
    color $gold
    cursor pointer
    a
      color $gold
      text-decoration none
    a:hover
      color $gold
      text-decoration none
    a:focus
      color $gold
      text-decoration none