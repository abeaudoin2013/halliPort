@import 'var.styl'
@import 'mixins.styl'

.login-container
  width 90%
  margin 100px auto
  max-width 400px
  .at-form
    font-size 16px
    .at-input
      label
        display block
        width 100%
        margin 5px 0
      input
        display block
        width 100%
        padding 5px
        outline none
        border-top none
        border-right none
        border-left none
        border-bottom 1px solid #000
        background-color #fff
      input:-webkit-autofill
        background-color #fff !important
    #at-btn
      width 100%
      margin 15px 0 0 0
      background-color #fff
      padding 5px 0
      border 1px solid #000
  .at-signup-link
    margin 15px 0 0 0
  .at-signin-link
    margin 15px 0 0 0
@media screen and (max-width 750px)
  .login-container
    height 100%