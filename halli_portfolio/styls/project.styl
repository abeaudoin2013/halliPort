@import 'var.styl'
@import 'mixins.styl'

.back-to-timeline
  margin 0
  color #000
  width 95%
  cursor pointer
  color rgba(0, 0, 0, .45)
  transition(all .5s ease)
  margin 0 auto
  a
    color rgba(0, 0, 0, .45)
    transition(all .5s ease)
    text-decoration none
    i
      font-size .7em
      margin 0 3px 1px 0
  a:focus
    color #000
    text-decoration none
.back-to-timeline:hover
  color #000
  a
    color #000
    text-decoration none
.project-container
  width 95%
  margin 5% auto
  .project-col
    width 50%
    display inline-block
    float left
    min-width 350px
    .main-image-container
	    #main-image
	      width 100%
	      height 400px
	      margin: 0 auto
	      border 3px solid #000
	    #main-image-desc
	      width 90%
    #project-gallery
      margin 25px 0 0 0
      .image
        display inline-block
        width 100px
        height 100px
        margin 0 10px 0 0
        border 3px solid #000
        transition(all .5s ease)
        cursor pointer
      .image-selected
        border 3px solid $gold
      .image:hover
        border 3px solid $gold