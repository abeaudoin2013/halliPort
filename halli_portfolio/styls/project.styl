@import 'var.styl'
@import 'mixins.styl'

.project-container
  width 95%
  margin 5% auto
  .project-col
    width 50%
    display inline-block
    float left
    min-width 350px
    .main-image-container
	    #main-image
	      width 100%
	      height 400px
	      margin: 0 auto
	      border 3px solid #000
	    #main-image-desc
	      width 90%
    #project-gallery
      margin 25px 0 0 0
      .image
        display inline-block
        width 100px
        height 100px
        margin 0 10px 0 0
        border 3px solid #000
        transition(all .5s ease)
        cursor pointer
      .image-selected
        border 3px solid $gold
      .image:hover
        border 3px solid $gold