@import 'var.styl'
@import 'mixins.styl'

.project-timeline-container
  display block
  #timeline
    width 70%
    margin 0 auto
    padding 15px 0 0 0
    .timeline-year-container
      width 12.5%
      height 50px
      float left
      display inline-block
      padding 0 10px
      box-sizing border-box
      color $gold
      .years
        text-align center
        margin 0
        color rgba(0, 0, 0, .45)
        transition(all .5s ease)
        cursor pointer
      .years:hover
        color #000
      .square-container
        width 30px
        margin 0 auto
        .font-a
          font-size .5em
          float left
          margin 0 2px 0 0
.back-to-timeline
  margin 0
  color #000
  width 95%
  cursor pointer
  color rgba(0, 0, 0, .45)
  transition(all .5s ease)
  margin 0 auto
  a
    color rgba(0, 0, 0, .45)
    transition(all .5s ease)
    text-decoration none
    i
      font-size .7em
      margin 0 3px 1px 0
  a:focus
    color #000
    text-decoration none
.back-to-timeline:hover
  color #000
  a
    color #000
    text-decoration none
.project-container
  width 95%
  height: 100%
  margin: 5% auto 0 auto
  .project-col-desk
    visibility visible
  .project-col-mob
    visibility hidden
    display none
  .project-col
    width 50%
    display inline-block
    float left
    min-width 350px
    .main-image-container
	    #main-image
	      width 100%
	      height 400px
	      margin: 0 auto
	      border 3px solid #000
	    #main-image-desc
	      width 90%
    #project-gallery
      margin 25px 0 0 0
      .image
        display inline-block
        width 100px
        height 100px
        margin 0 10px 0 0
        border 3px solid #000
        transition(all .5s ease)
        cursor pointer
      .image-selected
        border 3px solid $gold
      .image:hover
        border 3px solid $gold
@media screen and (max-width 750px)
  .back-to-timeline
    margin-top 55px
  .project-timeline-container
    display none
  .project-container
    width 100%
    background #000
    .project-col-desk
      display none
    .project-col
      width 100%
      .main-image-container
        width 100%
        #main-image
          border none
      #project-gallery
        width 90%
        margin 25px auto
      .project-col-mob
        visibility visible
        width 80%
        margin 0 auto 50px auto
        float none
        display block
        color #fff