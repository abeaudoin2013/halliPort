@import 'var.styl'
@import 'mixins.styl'

.Reading-container
  width 80%
  margin 0 auto 25px auto
	#Reading-header
	  text-align center
	  .Reading-h1
	    font-size 4em
	    text-transform uppercase
	    margin-bottom 15px
	  .Reading-desc
	    font-style italic
	    margin 0 0 35px 0
	.Reading-section
	  border-top 2px solid $gold
	  padding 25px 0
	  display table
	  width 100%
	  height 300px
	  .Reading-category
      display table-cell
      vertical-align middle
      width 25%
      .category
        margin 0
        font-size 4em
        text-transform capitalize
    .Readings
      display table-cell
      vertical-align middle
      width 75%
      .Reading-a
        display inline-block
        float left
        transition(all .5s ease)
        text-decoration none
        color #000
        .Reading-name
          margin-top 0px
          text-align left
          font-style italic
          font-size 14px
          color #000
          transition(all .5s ease)
        .Reading-preview
          display inline-block
          text-align center
          cursor pointer
          vertical-align middle
          width 200px
          height 150px
          transition(all .5s ease)
      .Reading-a:hover
        text-decoration none
        color #000
        .Reading-name
          font-weight bold
        .Reading-preview
          height 175px
          width 225px
      .Reading-a:focus
        text-decoration none
        color #000