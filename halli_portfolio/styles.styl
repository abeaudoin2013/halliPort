@import 'styls/*'

body
  background-color #CCC;
.main
  border 5px solid #000
  background-color #fff
  min-height 100px
#main
  width 80%
  display inline-block
  float right
  border-left 0px
  max-height 100vh
  height 100vh
  overflow scroll
@media screen and (max-width: 750px)
  #main
    width 100%
    border-left 5px solid #000
    height auto
    max-height none