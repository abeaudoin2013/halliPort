@import 'styls/*'

body
  background-color #CCC;
.main
  border 5px solid #000
  background-color #fff
  min-height 100px
#sidebar
  display inline-block
  width 20%
  #logo
    border-bottom 5px solid #000
    padding 25px 0
  #nav
    max-height 89.5vh
    height 81.7vh
    #ul
      padding 0
      margin 15px 0 0 0
      .li
        list-style-type none
        padding 5px 0 5px 5px
        text-transform uppercase
        a
          color #000
          text-decoration none
        a:focus
          color #000
          text-decoration none
        a:hover
          color #000
          text-decoration none
      .li-selected
        background-size: 200% 99%;
        background-image linear-gradient(to left, red 50%, black 50%)
        transition(all 1s ease)
        color #fff
        a
          color #fff
        a:hover
          color #fff
        a:focus
          color #fff
      .li-selected:hover
        background-position -100% 0
        color red !important
.project-preview
  width 300px
  display inline-block
  text-align center
#main
  width 80%
  display inline-block
  float right
  border-left 0px
  max-height 100.1vh
  height 100.1vh
  overflow scroll